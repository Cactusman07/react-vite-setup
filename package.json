{
  "name": "vite-react-example",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run tidy && vite build",
    "lint": "eslint . --ext js,jsx,ts,tsx,cjs --report-unused-disable-directives --max-warnings 0",
    "lint-fix": "eslint . --ext js,jsx,ts,tsx,cjs --report-unused-disable-directives --max-warnings 0 --fix",
    "prettier-format": "prettier --config .prettierrc src/**/*.{js,jsx,json,ts,tsx} --write",
    "tidy": "tsc && npm run lint && npm run prettier-format",
    "test": "vitest run",
    "test-watch": "vitest watch",
    "preview": "vite preview",
    "docker-build": "docker-compose up --build --no-recreate -d",
    "docker-up": "docker-compose up -d",
    "docker-login": "docker exec -it vite-react-example sh",
    "docker-install": "npm i && npm run dev"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vitest": "^0.34.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run tidy && test"
    }
  }
}
